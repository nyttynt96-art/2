{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "src/pages/**/*", 
    "src/components/**/*", 
    "src/main.tsx", 
    "src/App.tsx", 
    "prisma/**/*",
    "src/_core/hooks/**/*",
    "src/contexts/**/*",
    "src/hooks/**/*",
    "src/lib/trpc.ts",
    "src/lib/api.ts",
    "src/utils/animations.ts",
    "src/tests/**/*",
    "src/App_NEW.tsx",
    "src/App_CLEAN.tsx",
    "src/App_FINAL.tsx"
  ]
}
