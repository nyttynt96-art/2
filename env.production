# =====================================================
# PromoHive Environment Configuration - PRODUCTION
# السيرفر: Ubuntu 24.04 LTS @ 72.60.215.2
# الدومين: globalpromonetwork.store
# =====================================================

# ---------------------------------------------
# Database Configuration (PostgreSQL)
# ---------------------------------------------
DATABASE_URL="postgresql://promohive_user:YOUR_SECURE_PASSWORD_HERE@localhost:5432/promohive?schema=public"

# ---------------------------------------------
# Server Configuration
# ---------------------------------------------
PORT=3002
NODE_ENV=production
CORS_ORIGIN="https://globalpromonetwork.store"
PLATFORM_URL="https://globalpromonetwork.store"

# ---------------------------------------------
# JWT Authentication Secrets
# ---------------------------------------------
# TODO: استبدل هذه المفاتيح بمفاتيح عشوائية قوية!
# استخدام: openssl rand -base64 32
JWT_SECRET="CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG"
JWT_REFRESH_SECRET="CHANGE_THIS_TO_ANOTHER_STRONG_RANDOM_SECRET_KEY_AT_LEAST_32_CHARACTERS"
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ---------------------------------------------
# Rate Limiting
# ---------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ---------------------------------------------
# Email Configuration (Hostinger SMTP)
# ---------------------------------------------
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=promohive@globalpromonetwork.store
SMTP_PASS=PromoHive@2025!
SMTP_FROM="PromoHive <promohive@globalpromonetwork.store>"
SMTP_NAME="PromoHive"

# ---------------------------------------------
# External API Keys (وضع كيماوي الحزم الإعلانية هنا)
# ---------------------------------------------
ADGEM_JWT_SECRET="your-adgem-jwt-secret"
ADSTERRA_API_KEY="your-adsterra-api-key"
CPALEAD_API_KEY="your-cpalead-api-key"
OFFER_TASTIC_API_KEY="your-offertastic-api-key"

# ---------------------------------------------
# Logging Configuration
# ---------------------------------------------
LOG_LEVEL=info

# ---------------------------------------------
# Security Settings
# ---------------------------------------------
BCRYPT_SALT_ROUNDS=12
ALLOWED_ORIGINS="https://globalpromonetwork.store,https://www.globalpromonetwork.store"

# ---------------------------------------------
# File Upload Configuration
# ---------------------------------------------
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# ---------------------------------------------
# Session Configuration
# ---------------------------------------------
SESSION_SECRET="CHANGE_THIS_TO_A_STRONG_SESSION_SECRET"
SESSION_COOKIE_MAX_AGE=86400000

# ---------------------------------------------
# Feature Flags
# ---------------------------------------------
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=false

# ---------------------------------------------
# Payment & Withdrawal
# ---------------------------------------------
MIN_WITHDRAWAL_AMOUNT=10
MAX_WITHDRAWAL_AMOUNT=1000
WITHDRAWAL_FEE=5

# ---------------------------------------------
# Referral System
# ---------------------------------------------
REFERRAL_BONUS_AMOUNT=5
REFERRAL_LEVELS=2

# ---------------------------------------------
# Cron Jobs Configuration
# ---------------------------------------------
ENABLE_CRON_JOBS=true
CLEANUP_OLD_DATA_DAYS=30

# =====================================================
# ملاحظات مهمة:
# =====================================================
# 1. استبدل JWT_SECRET و JWT_REFRESH_SECRET بمفاتيح قوية
# 2. استبدل DATABASE_URL بكلمة مرور قوية لقاعدة البيانات
# 3. البريد الإلكتروني جاهز: promohive@globalpromonetwork.store
# 4. احفظ هذا الملف في مكان آمن ولا تشاركه مع أحد!
# =====================================================

