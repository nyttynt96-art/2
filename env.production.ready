# =====================================================
# PromoHive Production Environment Configuration
# السيرفر: Ubuntu 24.04 LTS @ 72.60.215.2
# الدومين: globalpromonetwork.store
# التاريخ: 2025
# =====================================================

# ---------------------------------------------
# PostgreSQL Database
# ---------------------------------------------
DATABASE_URL="postgresql://promohive_user:CHANGE_THIS_PASSWORD@localhost:5432/promohive?schema=public"

# ---------------------------------------------
# Server Configuration
# ---------------------------------------------
PORT=3002
NODE_ENV=production
CORS_ORIGIN="https://globalpromonetwork.store"
PLATFORM_URL="https://globalpromonetwork.store"

# ---------------------------------------------
# JWT Secrets (مهم جداً: استبدل هذه المفاتيح!)
# ---------------------------------------------
# لإنشاء مفاتيح قوية، استخدم:
# openssl rand -base64 32
JWT_SECRET="CHANGE_THIS_TO_STRONG_RANDOM_KEY_USE_OPENSSL_RAND"
JWT_REFRESH_SECRET="CHANGE_THIS_TO_STRONG_RANDOM_KEY_USE_OPENSSL_RAND"
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ---------------------------------------------
# Email Configuration (Hostinger)
# ---------------------------------------------
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=promohive@globalpromonetwork.store
SMTP_PASS=PromoHive@2025!
SMTP_FROM="PromoHive <promohive@globalpromonetwork.store>"
SMTP_NAME="PromoHive"

# ---------------------------------------------
# Rate Limiting
# ---------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ---------------------------------------------
# Security Settings
# ---------------------------------------------
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET="CHANGE_THIS_TO_STRONG_RANDOM_KEY"
ALLOWED_ORIGINS="https://globalpromonetwork.store,https://www.globalpromonetwork.store"

# ---------------------------------------------
# Logging
# ---------------------------------------------
LOG_LEVEL=info

# ---------------------------------------------
# File Upload
# ---------------------------------------------
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# ---------------------------------------------
# Session
# ---------------------------------------------
SESSION_COOKIE_MAX_AGE=86400000

# ---------------------------------------------
# Features
# ---------------------------------------------
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=false

# ---------------------------------------------
# Payment & Withdrawal
# ---------------------------------------------
MIN_WITHDRAWAL_AMOUNT=10
MAX_WITHDRAWAL_AMOUNT=1000
WITHDRAWAL_FEE=5

# ---------------------------------------------
# Referral System
# ---------------------------------------------
REFERRAL_BONUS_AMOUNT=5
REFERRAL_LEVELS=2

# ---------------------------------------------
# Cron Jobs
# ---------------------------------------------
ENABLE_CRON_JOBS=true
CLEANUP_OLD_DATA_DAYS=30

# ---------------------------------------------
# External APIs (Fill these later)
# ---------------------------------------------
ADGEM_JWT_SECRET=
ADSTERRA_API_KEY=
CPALEAD_API_KEY=
OFFER_TASTIC_API_KEY=

